@page
@model InventoryRazorApp.Pages.IndexModel

@{
    ViewData["Title"] = "Inventory List";
}

<h1>Inventory Stock</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">➕ Add New Item</a>
</p>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-striped table-hover mt-3">
    <thead class="table-dark">
        <tr>
            <th>Photo</th>
            <th>@Html.DisplayNameFor(model => model.ItemList[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.ItemList[0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.ItemList[0].Category)</th>
            <th>Actions</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ItemList)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.PhotoPath))
                    {
                        <img src="@item.PhotoPath" alt="Item Photo" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;" />
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>$@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Category)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>