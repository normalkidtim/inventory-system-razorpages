@page
@model InventoryRazorApp.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete Item";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2 class="text-danger">Delete Item Confirmation</h2>
        <hr />
        
        <h4 class="text-warning">Are you sure you want to delete this item? This action cannot be undone.</h4>

        <dl class="row mt-4">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Item.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Item.Name)
            </dd>
            
            <dt class="col-sm-3">
                Photo
            </dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Item.PhotoPath))
                {
                    <img src="@Model.Item.PhotoPath" alt="Item Photo" style="width: 100px; height: 100px; object-fit: cover;" />
                }
                else
                {
                    <span>No Photo</span>
                }
            </dd>
        </dl>
        
        <form method="post">
            <input type="hidden" asp-for="Item.Id" />
            <button type="submit" class="btn btn-danger">‚ùå Confirm Delete</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>