@page
@model InventoryRazorApp.Pages.CreateModel
@{
    ViewData["Title"] = "Add New Item";
}

<div class="create-item-page d-flex justify-content-center">
    <div class="card shadow-lg border-0 create-form-card p-4 col-md-6">

        <div class="text-center mb-3">
            <h2 class="fw-bold text-primary">
                <i class="bi bi-plus-circle"></i> Add New Inventory Item
            </h2>
            <p class="text-muted">Fill in the details to add a new item to your inventory.</p>
        </div>

        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger p-2"></div>

            <!-- Item Name -->
            <div class="form-floating mb-3">
                <input asp-for="Item.Name" class="form-control" placeholder="Item name" />
                <label asp-for="Item.Name"></label>
                <span asp-validation-for="Item.Name" class="text-danger small"></span>
            </div>

            <!-- Price -->
            <div class="form-floating mb-3">
                <input asp-for="Item.Price" class="form-control" type="number" step="0.01" placeholder="Price" />
                <label asp-for="Item.Price"></label>
                <span asp-validation-for="Item.Price" class="text-danger small"></span>
            </div>

            <!-- Category -->
            <div class="form-floating mb-3">
                <input asp-for="Item.Category" class="form-control" placeholder="Category" />
                <label asp-for="Item.Category"></label>
                <span asp-validation-for="Item.Category" class="text-danger small"></span>
            </div>

            <!-- Photo Upload -->
            <div class="mb-4">
                <label asp-for="Item.PhotoFile" class="form-label fw-semibold">
                    <i class="bi bi-image"></i> Upload Item Photo
                </label>
                <input asp-for="Item.PhotoFile" class="form-control form-control-lg" type="file" />
                <span asp-validation-for="Item.PhotoFile" class="text-danger small"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-check-circle"></i> Add Item
                </button>

                <a asp-page="/Dashboard" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
